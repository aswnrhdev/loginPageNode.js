<%- include('header') -%>

<div class="text-center center-div " id="login">
    <div class="container w-25 border border-5 border-danger py-5 main">
        <div class="title pb-5">
            <h2 class="font-weight-bold head1">Login System</h2>
            <span class="head2">Log in to access the community</span>
            <% if(locals.logout){ %>
                <div class="alert alert-success text-center">
                    <%= logout %>
                </div>
                <% } %>

        </div>
        <form action="/route/login" method="POST" class="pt-3">
            <% if(locals.msg){ %>
                <div class="alert alert-danger" role="alert">
                    <%= msg %>
                  </div>
                <!-- <div class="error">
                    <%= msg %>
                </div> -->
                <% } %>
            <div class="form-group">
                <input type="emal" class="form-control" placeholder="email" name="email">
                <!-- <small class="form-text text-muted text-left sub1">Register email address</small> -->
            </div>
            <div class="form-group mt-3">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <button type="submit" class="btn btn-outline-warning mt-4">Submit</button>
        </form>
    </div>
</div>


<%- include('footer') -%>
